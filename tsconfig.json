{
  "compilerOptions": {
    "baseUrl": "src",
    "lib": ["ES2017", "dom"],
    "module": "commonjs",
    "target": "ES6",
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "paths": {
      "core/*": ["core/*"],
      "core": ["core"],
      "utils/*": ["project/packages/utils/*"],
      "utils": ["project/packages/utils"],
      "response-manager/*": ["project/packages/response-manager/*"],
      "response-manager": ["project/packages/response-manager"]
    },
    "types": ["node"],
    "outDir": "dist",
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "coverage", "__tests__", "dist"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}

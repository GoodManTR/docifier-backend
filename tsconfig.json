{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "lib": ["es2021", "dom"],
    "outDir": "./dist",
    "noImplicitAny": false,
    "sourceMap": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "types": ["node"],
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": ["src"],
  "exclude": ["node_modules", "coverage", "__tests__", "dist"]
}
